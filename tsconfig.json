{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "target": "es2015",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "tests/**/*.ts"
  ]
}